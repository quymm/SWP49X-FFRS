<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.capstone.ffrs.RequestInfoActivity"
    tools:showIn="@layout/activity_request_info">

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:shrinkColumns="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp">

            <TextView
                android:id="@+id/text_title_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Địa chỉ:"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Sân XXX"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp">

            <TextView
                android:id="@+id/text_title_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ngày:"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="dd/MM/yyyy"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp">

            <TextView
                android:id="@+id/text_title_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Từ:"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="H:mm"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp">

            <TextView
                android:id="@+id/text_title_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đến:"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="H:mm"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp">

            <TextView
                android:id="@+id/text_title_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thời gian đá:"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="x tiếng"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp">

            <TextView
                android:id="@+id/text_title_field_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Loại sân:"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_field_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="5 vs 5"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp">

            <TextView
                android:id="@+id/text_title_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trạng thái:"
                android:textAlignment="textStart"
                android:textColor="@color/primaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Đang chờ"
                android:textAlignment="textStart"
                android:textColor="@color/green"
                android:textSize="22sp"
                android:textStyle="bold" />
        </TableRow>

        <Button
            android:id="@+id/btCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/red"
            android:onClick="onClickCancelRequest"
            android:text="Hủy"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btViewList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/green"
            android:onClick="onClickViewList"
            android:text="Xem danh sách đối thủ phù hợp"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </TableLayout>
</android.support.constraint.ConstraintLayout>
