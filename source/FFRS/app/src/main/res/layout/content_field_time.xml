            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@android:color/white"-->
            <!--android:drawableTop="@drawable/ic_menu_camera"-->
            <!--android:text="Trận đấu"-->
